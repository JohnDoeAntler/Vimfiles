" syntax highlight
set nocompatible
filetype plugin on
syntax on

" ruler
set ruler
set colorcolumn=80

" utf-8
set encoding=utf-8

" term color
set t_Co=256
set termguicolors

" line number
set nu rnu

" colorscheme background
set background=dark

" tab size
set tabstop=4
set shiftwidth=4

" word wrap

set nowrap

" indent line
set list lcs=tab:\|\ 

" use colorscheme
colorscheme gruvbox
let g:gruvbox_number_column='bg1'

